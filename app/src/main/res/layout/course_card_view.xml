<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/course_title"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/background_light"
            android:text="Course:"
            android:gravity="center_vertical"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/course_date"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:gravity="center_vertical"
            android:textSize="10dp"
            android:layout_below="@id/course_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Time:"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_alignBaseline="@id/course_date"/>

        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="#0057e7"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/course_attending"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="Attending:"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/view"
            android:layout_toStartOf="@+id/course_time"
            android:background="#f5f5f5" />

        <!--<CheckBox-->
            <!--android:id="@+id/course_checkbox"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_alignEnd="@+id/course_time"-->
            <!--android:layout_alignTop="@+id/course_attending"-->
            <!--android:button="@drawable/check_box_custom"-->
            <!--android:scaleX="3"-->
            <!--android:scaleY="3" />-->

        <TextView
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:text="See More"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/course_attending"
            android:background="#f5f5f5"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>